{
    "name": "Hydration Reminder",
    "version": "1.0.0",
    "description": "Hydration Reminder reminds users to drink some water every set of interval",
    "manifest_version": 3,
    "author": "Marwan Ahmed",
    "permissions": [
        "notifications",
        "background",
        "alarms",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Hydration Reminder",
        "default_icon": {
            "16": "icons/water-glass16.png",
            "48": "icons/water-glass48.png",
            "128": "icons/water-glass128.png"
        }
    },
    "icons": {
        "16": "icons/water-glass16.png",
        "48": "icons/water-glass48.png",
        "128": "icons/water-glass128.png"
    }
}